package ejercicio_08;

public class Sorteo {
	
	// Atributos
	
	private int minimo;
	private int maximo;
	
	
	// Constructores
	
	public Sorteo () {
		this.minimo = 0;
		this.maximo = 0;		
	}
	
	public Sorteo (int minimo, int maximo) {
		this.minimo = minimo;
		this.maximo = maximo;
	}
	
		
	// Getters y Setters

	
	public int getMinimo() {
		return minimo;
	}

	public void setMinimo(int minimo) {
		this.minimo = minimo;
	}

	public int getMaximo() {
		return maximo;
	}

	public void setMaximo(int maximo) {
		this.maximo = maximo;
	}
	
	// Métodos
	
	public void imprimeboleto (int numero) {
		System.out.println("\n\n\t* * * * * * * * * * * * * * * * * * * * * *\n"
				           + "\t*                                         *\n"
				           + "\t*      EL SORTEO DE PRIMERO DE DAM        *\n"
				           + "\t*                                         *");
		System.out.printf("\t*  Su número: %d                        *\n", numero);
		System.out.println("\t*                                         *\n"
			               + "\t* * * * * * * * * * * * * * * * * * * * * *");
	}
	
	
	public int sortear() {
		int premiado = 0;
		premiado = (int)Math.floor(Math.random()*(maximo - minimo + 1) + minimo);
		return premiado;
	}
	
	public int comprobar (int miNumero, int premiado) {
		int comprobar = 0;
		if (miNumero == premiado) {
			comprobar = 1;
		} else if (miNumero % 10 == premiado % 10) {
			comprobar = 2;
		}
		return comprobar;
	}
	
	
	
	
	
	

	
	
}
