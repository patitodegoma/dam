
public class Persona {
	
	// Atributos
	
	String nombre;
	int edad;
	
	// Constructor (hay 3 maneras de ponerlo, comento la v2 y la v3 para que no dé errores)
	
	// v1
	public Persona(String nombre, int edad) {
		
		this.nombre = nombre;
		this.edad = edad;
	}
/*	
	// v2
	public Persona(String nom, int ed) {
		nombre = nom;
		edad = ed;
	}
	
	// v3
	public Persona(String nom, int ed) {
		this.nombre = nom;
		this.edad = ed;
	}
*/

	// Método para imprimir
	
	public void imprimirDatos (String nombrePers, int edadPers) {
		nombrePers = nombre;
		edadPers = edad;
		System.out.println("\nEl nombre introducido es"+nombrePers+" y la edad es "+edadPers+" años.");
	}
	
	
	
	
}
